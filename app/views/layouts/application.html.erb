<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/45b41b99b0.js" crossorigin="anonymous"></script>
   <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
       <%= link_to "/", class: 'navbar-brand' do %>
      Bookers
    <% end %>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to user_path(current_user.id),class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-house"></i>Home</p>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to users_path,class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-users"></i>Users</p>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to books_path,class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-book-open"></i>Books</p>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path,method: :delete,class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-right-to-bracket"></i>Log out</p>
        <% end %>
      </li>

    <% else %>
    
      <li class="nav-item">
        <%= link_to "/",class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-house"></i>Home</p>
        <% end %>
      </li>
      
      <li>
        <%= link_to about_path,class:'nav-link text-light' do %>
        <p><i class="fa-solid fa-link"></i>About</p>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-user"></i>Sign up</p>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path,class: 'nav-link text-light' do %>
        <p><i class="fa-solid fa-right-to-bracket"></i>Log in</p>
        <% end %>
      </li>
    <% end %>
  </header>
 </ul>
      </div>
    </div>
  </nav>
  
  <main>
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %>"><%= message %></div>
    <% end %>    
    <%= yield %>
  </main>
    
    
 <footer class=" text-dark pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
