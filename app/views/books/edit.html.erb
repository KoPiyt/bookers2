<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <p></p>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"title"%>
  <p></p>
  <label for="inputIntroduction">Opinion</label>
  <p></p>
  <%= f.text_field :body, autofocus: true, id:"inputIntroduction", placeholder:"body"%>
  <p></p>
  <%= f.submit "Update Book",class:"btn btn-success"%>
<% end %>

    <%= link_to "Show", book_path(@book)  %>
    <%= link_to "Back", books_path %>