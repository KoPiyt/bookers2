<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"title"%>
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :body, autofocus: true, id:"inputIntroduction", placeholder:"body"%>
  <%= f.submit "Update Book" %>
<% end %>

    <%= link_to "Show", book_path(@book)  %>
    <%= link_to "Back", books_path %>