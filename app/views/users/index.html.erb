<div class="container">  <!-- この行を追加 -->
  <div class="row">      <!-- この行を追加 -->
   <div class="col-md-3">

<div>
  <h3>User info</h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th scope="row">name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th scope="row">introduction</th>
        <td><%= @user.introduction %></td>
      </tr>
    </tbody>
  </table>
  
  <%= link_to  edit_user_path(@user),class: 'nav-link' do %>
   <p><button type="button" class="btn btn-outline-secondary btn-block">
     <i class="fa-solid fa-user-cog"></i>
     </button>
     </p>
   <% end %>
</div>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p></p>
  <%= f.submit 'Create Book',class: "btn btn-success" %>
<% end %>
</div>

 <div class="col-md-8 offset-md-1">
<h1>Users</h1>

  <table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">image</th>
      <th scope="col">name</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <th scope="row"></th>
      <td><%= image_tag user.get_profile_image(100,100) %></td>
      <td><%= user.name %></td>
      <td><%= link_to  "Show", user_path(user) %></td>
    </tr>
    </tbody>
    <% end %>
    </table>
    
       </div>
  </div>  <!-- この行を追加 -->
</div> 
